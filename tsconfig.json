{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es5",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "types/**/*"]
}
